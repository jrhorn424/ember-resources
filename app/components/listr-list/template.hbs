<h3 class="list-header">
  {{list.title}}

  <button class="btn btn-xs btn-primary" {{action 'edit'}}>
    Edit
  </button>
</h3>

<ul>
  {{#each list.items as |item|}}
    {{listr-list/item item=item
                      toggleDone='toggleItemDone'
                      deleteItem='deleteItem'}}
  {{/each}}
</ul>

<form {{action 'createItem' on='submit'}}>
  {{input placeholder='New item'
          class='input-group form-control'
          value=form.text}}
</form>
